<Window x:Class="OgreMaze.UI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:OgreMaze.UI.Views"
        xmlns:viewModels="clr-namespace:OgreMaze.UI.ViewModels"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=viewModels:MainWindowViewModel}"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <views:MazeControlView DataContext="{Binding MazeControlViewModel}" Grid.Column="0" Grid.Row="0" />
        <WrapPanel Grid.Column="0" Grid.Row="1">
            <Button Command="{Binding GenerateMapCommand}">Generate Map</Button>
            <Button Command="{Binding ShowPathCommand}">Show Path</Button>
            <TextBlock>Path Found: </TextBlock><TextBlock Text="{Binding PathFound}" />
        </WrapPanel>
    </Grid>
</Window>
